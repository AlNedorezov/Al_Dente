<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="700" prefWidth="800" xmlns="http://javafx.com/javafx/8.0.101" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.innopolis.al_dente.controllers.MainController">

    <AnchorPane>
        <MenuBar prefHeight="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="menu_new_file" mnemonicParsing="false" onAction="#handleAboutAction"
                                  text="New File"/>
                        <MenuItem fx:id="open_file" mnemonicParsing="false" onAction="#handleAboutAction"
                                  text="Open File"/>
                        <MenuItem fx:id="save_file" mnemonicParsing="false" onAction="#handleAboutAction"
                                  text="Save File"/>
                        <MenuItem fx:id="save_file_as" mnemonicParsing="false" onAction="#handleAboutAction"
                                  text="Save File As"/>
                        <MenuItem fx:id="exit" mnemonicParsing="false" onAction="#handleAboutAction" text="Exit"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </AnchorPane>

    <TabPane fx:id="tabPane" prefHeight="200" prefWidth="200" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <!--<Tab text="Untitled Tab 1">-->
            <!--<content>-->
            <!--<AnchorPane>-->
            <!--<children>-->
            <!--<TextArea maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" />-->
            <!--</children>-->
            <!--</AnchorPane>-->
            <!--</content>-->
            <!--</Tab>-->

        </tabs>
    </TabPane>
    <VBox prefHeight="100.0" prefWidth="200.0">
        <children>
            <VBox fx:id="vbox_serch_replace_container"  visible="false" prefHeight="25.0" prefWidth="200.0" style="-fx-background-color: #a7e8ef;">
                <children>
                    <HBox fx:id="hbox_search" visible="false">
                        <children>
                            <Label text="Find">
                                <HBox.margin>
                                    <Insets left="10.0" right="10.0"/>
                                </HBox.margin>
                            </Label>
                            <TextField fx:id="tv_search" prefHeight="25.0" prefWidth="727.0">
                                <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                </VBox.margin>
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                            </TextField>
                        </children>
                        <VBox.margin>
                            <Insets bottom="10.0" top="10.0"/>
                        </VBox.margin>
                    </HBox>

                    <HBox fx:id="hbox_replace"  visible="false">
                        <children>
                            <Label text="Replace">
                                <HBox.margin>
                                    <Insets left="10.0" right="10.0"/>
                                </HBox.margin>
                            </Label>
                            <TextField fx:id="tv_replace" prefHeight="25.0" prefWidth="727.0">
                                <VBox.margin>
                                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0"/>
                                </VBox.margin>
                            </TextField>
                        </children>
                    </HBox>

                </children>
            </VBox>
            <VBox prefHeight="25.0" style="-fx-background-color: #dbd5be;">
                <children>
                    <Label fx:id="line_number" text="20:30"/>
                </children>
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </VBox>
        </children>
    </VBox>


</VBox>
